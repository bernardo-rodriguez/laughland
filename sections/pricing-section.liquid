
{% assign pricing_column = section.blocks | where: 'type', 'column' %}
{% assign pricing_data = section.blocks | where: 'type', 'row' %}

{% assign formatted_heading = section.settings.section_heading
  | replace: '{', "<span class='stylized'>"
  | replace: '}', '</span>'
%}

<div class="Pricing_Section">
  <div class="page-width">
    <div class="Section_Header">
      <h2 class="h4">{{ formatted_heading }}</h2>
      <p class="sh2">{{ section.settings.section_sub_heading }}</p>
    </div>
    <div class="Pricing_Table">
      <table>
        <thead>
          {% for pricing_column in column_blocks %}
            <th class="sh2">
              {{ pricing_column.settings.heading }}
            </th>
          {% endfor %}
        </thead>
        <tbody>
          <td></td>
        </tbody>
      </table>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Pricing Section",
    "settings": [
      {
        "type": "text",
        "id": "section_heading",
        "label": "Heading"        
      },
      {
        "type": "text",
        "id": "section_sub_heading",
        "label": "Sub Heading"        
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"        
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"        
      }
    ],
    "blocks": [
      {
        "type": "column",
        "name": "Column",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          }
        ]
      },
      {
        "type": "row",
        "name": "Row",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "header",
            "content": "Column values"
          },
          {
            "type": "textarea",
            "id": "data",
            "label": "Data"
          },
          {
            "type": "select",
            "id": "data_icon",
            "options": [
              {
                "value": "true",
                "label": "True"
              },
              {
                "value": "false",
                "label": "False"
              }
            ],
            "default": "true",
            "label": "True/False"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Pricing Section"
      }
    ]
  }
{% endschema %}

