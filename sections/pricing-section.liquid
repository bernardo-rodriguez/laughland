{% assign formatted_heading = section.settings.section_heading
  | replace: '{', "<span class='stylized'>"
  | replace: '}', '</span>'
%}

<div class="Pricing_Section">
  <div class="page-width">
    <div class="Section_Header">
      <h2 class="h4">{{ formatted_heading }}</h2>
      <p class="sh2">{{ section.settings.section_sub_heading }}</p>
    </div>
    <div class="Pricing_Table">
      <table>
        <thead>
            <th></th>
            <th class="sh2">{{ column.settings.first_title }}</th>
            <th class="sh2">{{ column.settings.second_title }}</th>
            <th class="sh2">{{ column.settings.third_title }}</th>
        </thead>
        <tbody>
          {% for block in section.blocks %}
            <tr>
              <td class="sh3">{{ block.settings.heading }}</td>
              <td class="sh3">
                {%- if block.settings.diy_data != blank -%}
                  {{ block.settings.diy_data }}
                {%- else -%}
                  {% render 'icon' icon: 'false-icon' %}
                  {% render 'icon' icon: 'true-icon' %}
                {% endif %}
              </td>
              <td class="sh3">
                
              </td>
              <td class="sh3">
                
              </td>
            </tr>
          {% endfor %}
        </tbody>
      </table>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Pricing Section",
    "settings": [
      {
        "type": "header",
        "content": "Section Header"
      },
      {
        "type": "text",
        "id": "section_heading",
        "label": "Heading"        
      },
      {
        "type": "text",
        "id": "section_sub_heading",
        "label": "Sub Heading"        
      },
      {
        "type": "header",
        "content": "Table Header"
      },
      {
        "type": "text",
        "id": "first_title",
        "label": "First Title"        
      },
      {
        "type": "text",
        "id": "second_title",
        "label": "Second Title"        
      },
      {
        "type": "text",
        "id": "third_title",
        "label": "Third Title"        
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"        
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"        
      }
    ],
    "blocks": [
      {
        "type": "row",
        "name": "Row",
        "settings": [
          {
            "type": "text",
            "id": "heading",
            "label": "Heading"
          },
          {
            "type": "header",
            "content": "DIY Values"
          },
          {
            "type": "text",
            "id": "diy_data",
            "label": "Data"
          },
          {
            "type": "select",
            "id": "diy_data_icon",
            "options": [
              {
                "value": "true",
                "label": "True"
              },
              {
                "value": "false",
                "label": "False"
              }
            ],
            "default": "true",
            "label": "True/False"
          },
          {
            "type": "header",
            "content": "Dentist Values"
          },
          {
            "type": "text",
            "id": "dentist_data",
            "label": "Data"
          },
          {
            "type": "select",
            "id": "dentist_data_icon",
            "options": [
              {
                "value": "true",
                "label": "True"
              },
              {
                "value": "false",
                "label": "False"
              }
            ],
            "default": "true",
            "label": "True/False"
          },
          {
            "type": "header",
            "content": "US Values"
          },
          {
            "type": "text",
            "id": "us_data",
            "label": "Data"
          },
          {
            "type": "select",
            "id": "us_data_icon",
            "options": [
              {
                "value": "true",
                "label": "True"
              },
              {
                "value": "false",
                "label": "False"
              }
            ],
            "default": "true",
            "label": "True/False"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Pricing Section"
      }
    ]
  }
{% endschema %}

