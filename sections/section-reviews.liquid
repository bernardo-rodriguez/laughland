{% assign formatted_heading = section.settings.section_heading
  | escape
  | replace: '{', "<span class='stylized'>"
  | replace: '}', '</span>'
%}

<div class="Reviews_Section">
  <div class="page-width">
    <div class="Reviews_Inr_Section">
      <div class="Section_Header">
        <h2 class="h4">{{ section.settings.section_heading }}</h2>
        <p class="sh2">{{ section.settings.section_sub_heading }}</p>
      </div>
      <div class="Review_List">
        {% for block in section.blocks %}
          <div class="Single_Review">
            <div class="Single_Review_Inr">
              
            </div>
          </div>
        {% endfor %}
      </div>
    </div>
  </div>
</div>

{% schema %}
  {
    "name": "Reviews Section",
    "settings": [
      {
        "type": "header",
        "content": "Section Header"
      },
      {
        "type": "text",
        "id": "section_heading",
        "label": "Heading"        
      },
      {
        "type": "text",
        "id": "section_sub_heading",
        "label": "Sub Heading"        
      },
      {
        "type": "header",
        "content": "Review Count"
      },
      {
        "type": "text",
        "id": "review_count",
        "label": "Review Count"        
      },
      {
        "type": "header",
        "content": "Button"
      },
      {
        "type": "text",
        "id": "button_label",
        "label": "Button Label"        
      },
      {
        "type": "url",
        "id": "button_url",
        "label": "Button Url"        
      }
    ],
    "blocks": [
      {
        "type": "review",
        "name": "Review",
        "settings": [
          {
            "type": "text",
            "id": "title",
            "label": "Title"            
          },
          {
            "type": "textarea",
            "id": "text",
            "label": "Review"
          },
          {
            "type": "text",
            "id": "author",
            "label": "Author"
          }
        ]
      }
    ],
    "presets": [
      {
        "name": "Reviews Section"
      }
    ]
  }
{% endschema %}

