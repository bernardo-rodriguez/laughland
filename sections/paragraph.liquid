{{ 'section-paragraph.css' | asset_url | stylesheet_tag }}

{% assign formatted_heading = section.settings.heading
  | replace: '{', "<span class='stylized'>"
  | replace: '}', '</span>'
%}

<section class="paragraph">
  <div class="page-width">
    <div class="paragraph__container">
      <h2 class="paragraph__header">{{ formatted_heading }}</h2>
      <p class="paragraph__text body-lg">{{ section.settings.text | newline_to_br }}</p>
      <a href="{{ section.settings.link }}" class="text-link text-link__dark">{{ section.settings.link_label }}</a>
    </div>
  </div>
</section>

{% schema %}
  {
    "name": "Paragraph",
    "settings": [
     {
        "type": "text",
        "id": "heading",
        "label": "Heading",
        "info": "Wrap italized text in {}"
      },
      {
        "type": "textarea",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "link_label",
        "label": "Link Label"
      },
      {
        "type": "url",
        "id": "link",
        "label": "Link"
      }
    ],
    "presets": [
      {
        "name": "Paragraph"
      }
    ]
  }
{% endschema %}