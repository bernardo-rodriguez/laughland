{{ 'section-hero.css' | asset_url | stylesheet_tag }}

{% assign formatted_title = section.settings.title
  | replace: '{', "<span class='stylized'>"
  | replace: '}', '</span>'
%}

<div class="hero">
  {% if section.settings.mobile_image != blank %}
    {% render 'lazy-image', image: section.settings.image, fade: true, fill: true, classes: 'hide-mobile' %}
    {% render 'lazy-image', image: section.settings.mobile_image, fade: true, fill: true, classes: 'hide-desktop' %}
  {% elsif section.settings.image != blank %}
    {% render 'lazy-image', image: section.settings.image, fade: true, fill: true %}
  {% endif %}
  <div class="page-width hero__inner">
    <div class="hero__container">
      <h2 class="hero__title">{{ formatted_title | newline_to_br }}</h2>
      <h5 class="h5">{{ section.settings.sub_title }}</h5>
      {% if section.settings.button_link != blank %}
        <a href="{{ section.settings.button_link }}" class="button {% if section.settings.button_style == 'secondary' %}button--secondary{% else %}button--primary{% endif %}">
          {{- section.settings.button_label -}}
        </a>
      {% else %}
        <button class="button button--secondary" data-open-quiz>{{ section.settings.button_label }}</button>
      {% endif %}
    </div>
  </div>
</div>

{% schema %}
{
  "name": "Hero",
  "settings": [
    {
      "type": "header",
      "content": "Image"
    },
    {
      "type": "image_picker",
      "id": "image",
      "label": "Image"
    },
    {
      "type": "image_picker",
      "id": "mobile_image",
      "label": "Mobile Image"
    },
    {
      "type": "header",
      "content": "Content"
    },
    {
      "type": "textarea",
      "id": "title",
      "label": "Title",
      "info": "Wrap italized text in {}"
    },
    {
      "type": "textarea",
      "id": "sub_title",
      "label": "Sub Title"
    },
    {
      "type": "header",
      "content": "Button"
    },
    {
      "type": "text",
      "id": "button_label",
      "label": "Button Label"
    },
    {
      "type": "url",
      "id": "button_link",
      "label": "Button Link"
    },
    {
      "type": "select",
      "id": "button_style",
      "options": [
        {
          "value": "primary",
          "label": "Primary"
        },
        {
          "value": "secondary",
          "label": "Secondary"
        }
      ],
      "default": "secondary",
      "label": "Button Style"
    }
  ],
  "presets": [
    {
      "name": "Hero"
    }
  ]
}
{% endschema %}
